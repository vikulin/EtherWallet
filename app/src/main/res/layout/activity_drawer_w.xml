                        <TextView
                            android:id="@+id/gnt"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:textSize="22dp"
                            android:textColor="@color/contactColor"
                            android:includeFontPadding="false"
                            android:text="..."
                            android:gravity="center"
                            android:textAlignment="gravity"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:textColor="@color/gray"
                            android:text="GNT/ETH"
                            android:gravity="center"
                            android:textAlignment="gravity"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.4"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        android:weightSum="3"
                        android:background="@drawable/border_bottom_rigth">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1.5"
                            android:paddingRight="10dp"
                            android:paddingLeft="10dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/litecoin"
                            />
                        <TextView
                            android:id="@+id/litecoin"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:textSize="22dp"
                            android:textColor="@color/contactColor"
                            android:includeFontPadding="false"
                            android:text="..."
                            android:gravity="center"
                            android:textAlignment="gravity"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:textColor="@color/gray"
                            android:text="LTC/ETH"
                            android:gravity="center"
                            android:textAlignment="gravity"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.4"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        android:weightSum="3"
                        android:background="@drawable/border_bottom_rigth">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1.5"
                            android:paddingRight="10dp"
                            android:paddingLeft="10dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/augur"
                            />
                        <TextView
                            android:id="@+id/augur"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:textSize="22dp"
                            android:textColor="@color/contactColor"
                            android:includeFontPadding="false"
                            android:text="..."
                            android:gravity="center"
                            android:textAlignment="gravity"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:textColor="@color/gray"
                            android:text="Augur/ETH"
                            android:gravity="center"
                            android:textAlignment="gravity"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.4"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        android:weightSum="3"
                        android:background="@drawable/border_bottom">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1.5"
                            android:paddingRight="10dp"
                            android:paddingLeft="10dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/zcash"
                            />
                        <TextView
